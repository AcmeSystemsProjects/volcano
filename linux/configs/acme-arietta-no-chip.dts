/*
 * acme-arietta.dts - Device Tree file for Arietta G25
 * Generated by http://dts.acmesystems.it/arietta
 */
/dts-v1/;

/*
 * For Volcano Board http://volcano.hardelettrosoft.com , preliminary version.
 */

#include "at91sam9g25.dtsi"
/ {
	model = "Acme Systems Arietta G25";
	compatible = "acme,ariettag25", "atmel,at91sam9x5ek","atmel,at91sam9x5", "atmel,at91sam9";
	aliases {
		serial0 = &dbgu;
		serial1 = &usart0;
		serial2 = &usart1;
		serial3 = &usart2;
		serial4 = &usart3;
		serial5 = &uart0;
		serial6 = &uart1;
	};
	chosen {
		bootargs = "console=ttyS0,115200 root=/dev/mmcblk0p2 rw rootwait";
	};
	memory {
		reg = <0x20000000 0x8000000>;
	};
	clocks {
		#address-cells = <1>;
		#size-cells = <1>;
		ranges;
		main_clock: clock@0 {
			compatible = "atmel,osc", "fixed-clock";
			clock-frequency = <12000000>;
		};
		slow_xtal {
			clock-frequency = <32768>;
		};
		main_xtal { 
			clock-frequency = <12000000>; 
		}; 
	};
	ahb {
		apb {
			mmc0: mmc@f0008000 {
				pinctrl-0 = <
				  &pinctrl_mmc0_slot0_clk_cmd_dat0
				  &pinctrl_mmc0_slot0_dat1_3>;
				status = "okay";
				slot@0 {
					reg = <0>;
					bus-width = <4>;
				};
			};
			i2c0: i2c@f8010000 {
				status ="okay";
			};
			usart0: serial@f801c000 {
				pinctrl-0 = <&pinctrl_usart0>;
				status ="okay";
			};
			usart1: serial@f8020000 {
				pinctrl-0 = <&pinctrl_usart1>;
				status ="okay";
			};
			spi1: spi@f0004000 {
				status = "okay";
				cs-gpios = <&pioA 8 0>, <&pioA 0 0>, <&pioA 31 0>, <&pioA 30 0>;
				device@0 {
					compatible = "spidev";
					spi-max-frequency = <5000000>;	    // 5 MHz
					reg = <0>;
				};
			};

			pinctrl@fffff400 {
				pwm0 {
					pinctrl_pwm0_0: pwm0_0-0 {
						atmel,pins =
							< AT91_PIOB 11 AT91_PERIPH_B AT91_PINCTRL_NONE>;
					};
					pinctrl_pwm0_1: pwm0_1-0 {
						atmel,pins =
							< AT91_PIOB 12 AT91_PERIPH_B AT91_PINCTRL_NONE>;
					};
					pinctrl_pwm0_2: pwm0_2-0 {
						atmel,pins =
							< AT91_PIOB 13 AT91_PERIPH_B AT91_PINCTRL_NONE>;
					};
					pinctrl_pwm0_3: pwm0_3-0 {
						atmel,pins =
							< AT91_PIOB 14 AT91_PERIPH_B AT91_PINCTRL_NONE>;
					};
				};
			};
			pwm0: pwm@f8034000 {
				pinctrl-names = "default";
				pinctrl-0 = <&pinctrl_pwm0_0 &pinctrl_pwm0_1 &pinctrl_pwm0_2 &pinctrl_pwm0_3>;
				status = "okay";
			};

			ssc0: ssc@f0010000 {
				status = "okay";
			};
			usb2: gadget@f803c000 {
				status = "okay";
			};
			dbgu: serial@fffff200 {
				status = "okay";
			};
			pinctrl@fffff400 {
			};
			rtc@fffffeb0 {
				status = "okay";
			};
		};
		usb0: ohci@00600000 {
			status = "okay";
			num-ports = <3>;
		};
		usb1: ehci@00700000 {
			status = "okay";
		};
	};
	leds {
		compatible = "gpio-leds";
		arietta_led {
			label = "arietta_led";
			gpios = <&pioB 8 GPIO_ACTIVE_HIGH>; /* PB8 */
			linux,default-trigger = "cpu0";
		};
	};
	buzzer {
		compatible = "gpio-leds";
		motherboard_buzzer {
			label = "motherboard_buzzer";
			gpios = <&pioA 29 GPIO_ACTIVE_HIGH>; /* PA29 */
			linux,default-trigger = "none";
		};
	};

	buttons {
		compatible = "gpio-keys";
		#address-cells = <1>;
                #size-cells = <0>;

/* INTERRUPTS */
/* 1) ?  http://sg.danny.cz/foxg20/ag25g20_utils/ariag25_gpio.txt  -> 
      ?   NUM BANK(A,B,C,D -> 1,2,3,4) *32 - 32 + BIT OF BANK(0..31). EX: PC17 -> 3*32-32+17 = 81  */
/* 2) IRQ_TYPE_XXX  */
/* 3) 7 = max priority*/

		arietta_button {
			label = "arietta_button";
			gpios = <&pioC 17 0>; /* PC17 */
			interrupts = <81 IRQ_TYPE_EDGE_FALLING 7>;
			linux,code = <28>; /* KEY_ENTER */
			key-is-active-low;
			debounce-intervall = <50>;
		};
		p1: motherboard_p1 {
			label = "motherboard_p1";
			gpios = <&pioA 28 0>; /* PA28 */
			interrupts = <28 IRQ_TYPE_EDGE_FALLING 7>; /* scegleire se va bene */
			linux,code = <2>; /* KEY_1 */
			key-is-active-low;
			debounce-intervall = <50>;
		};
		p2: motherboard_p2 {
			label = "motherboard_p2";
			gpios = <&pioA 27 0>; /* PA27 */
			interrupts = <27 IRQ_TYPE_LEVEL_LOW 7>;  /*per provare differenza */
			linux,code = <3>; /* KEY_2 */
			key-is-active-low;
			debounce-intervall = <50>;
		};
	};

};


